@model EURISTest.Models.ProductCatalog

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ProductCatalog</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Catalog_id)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Catalog_id)
            @Html.ValidationMessageFor(model => model.Catalog_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Product_id)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product_id)
            @Html.ValidationMessageFor(model => model.Product_id)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

